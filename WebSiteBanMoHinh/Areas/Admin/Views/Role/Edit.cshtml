@using Microsoft.AspNetCore.Identity
@model IdentityRole
@using WebSiteBanMoHinh.Resources;
@inject LanguageService ShareLocallizer
@{
    ViewData["title"] = "Edit Role";
}

<style>
    :root {
        --primary-color: rgb(216,172,68);
        --secondary-color: rgb(255,204,102);
        --text-color: rgb(50,50,50);
        --gold-color: #DAA520;
    }

    .edit-role-container h4 {
        color: var(--primary-color);
        font-weight: 900;
        margin-bottom: 20px;
        text-align: center;
        font-size: 2rem;
    }

    .edit-role-container {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        padding: 30px;
        margin: 20px auto;
        max-width: 600px;
    }

        .edit-role-container .form-group {
            margin-bottom: 20px;
        }

            .edit-role-container .form-group label {
                color: var(--text-color);
                font-weight: 700;
                font-size: 1.1rem;
                display: block;
                margin-bottom: 5px;
            }

            .edit-role-container .form-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid var(--gold-color);
                border-radius: 5px;
                font-size: 1rem;
                color: var(--text-color);
                transition: all 0.3s ease;
            }

                .edit-role-container .form-group input:focus {
                    border-color: var(--primary-color);
                    box-shadow: 0 0 5px rgba(216,172,68,0.3);
                    outline: none;
                }

        .edit-role-container .text-danger {
            color: #dc3545;
            font-size: 0.9rem;
            margin-top: 5px;
            display: block;
        }

        .edit-role-container .btn-primary {
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            border: none;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1rem;
            font-weight: 700;
            transition: all 0.3s ease;
            display: inline-block;
        }

            .edit-role-container .btn-primary:hover {
                background: linear-gradient(to right, var(--secondary-color), var(--primary-color));
                transform: translateY(-2px);
            }

        .edit-role-container .back-link {
            display: inline-block;
            margin-top: 20px;
            color: var(--primary-color);
            font-weight: 700;
            font-size: 1rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .edit-role-container .back-link:hover {
                color: var(--gold-color);
                text-decoration: underline;
            }

    /* Responsive */
    @@media (max-width: 768px) {
        .edit-role-container h4 {
            font-size: 1.5rem;
        }

        .edit-role-container {
            padding: 20px;
            margin: 10px;
        }

            .edit-role-container .form-group input {
                padding: 8px;
                font-size: 0.9rem;
            }

            .edit-role-container .btn-primary {
                padding: 8px 16px;
                font-size: 0.9rem;
            }

            .edit-role-container .back-link {
                font-size: 0.9rem;
            }
    }
</style>

<div class="edit-role-container">
    <h4>@ShareLocallizer.GetLocalizedHTML("Edit Role")</h4>
    <div>
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name">@ShareLocallizer.GetLocalizedHTML("Role Name")</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary">@ShareLocallizer.GetLocalizedHTML("Update")</button>
            </div>
        </form>
        <a asp-action="Index" asp-controller="Role" class="back-link">@ShareLocallizer.GetLocalizedHTML("Back to list roles")</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}