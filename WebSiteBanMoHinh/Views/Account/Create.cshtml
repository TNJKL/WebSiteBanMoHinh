@using WebSiteBanMoHinh.Resources;
@inject LanguageService ShareLocallizer
@model UserModel
@{
    ViewData["Title"] = "Register Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<section id="register-section">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>@ShareLocallizer.GetLocalizedHTML("New User Signup")!</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="Create" asp-controller="Account">
                        <div class="form-group">
                            <label><i class="fa fa-user"></i> @ShareLocallizer.GetLocalizedHTML("Username")</label>
                            <input asp-for="UserName" class="form-control signup-input" placeholder="Enter your username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label><i class="fa fa-envelope"></i> Email</label>
                            <input asp-for="Email" class="form-control signup-input" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label><i class="fa fa-lock"></i> @ShareLocallizer.GetLocalizedHTML("Password")</label>
                            <input asp-for="Password" class="form-control signup-input" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-signup"><i class="fa fa-user-plus"></i> @ShareLocallizer.GetLocalizedHTML("Create")</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Style cho trang Register */
    #register-section {
        padding: 50px 0;
        background-color: #f5f5f5;
    }

    .signup-form {
        background-color: white;
        border: 2px solid #e6b800;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

        .signup-form h2 {
            font-size: 2em;
            font-weight: 700;
            font-family: 'Roboto', sans-serif;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
            border-bottom: 3px solid #e6b800;
            padding-bottom: 10px;
        }

        .signup-form .form-group {
            margin-bottom: 20px;
        }

        .signup-form label {
            font-size: 1.1em;
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .signup-form .signup-input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1em;
            color: #333333;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .signup-form .signup-input:focus {
                border-color: #e6b800;
                box-shadow: 0 0 0 0.2rem rgba(230, 184, 0, 0.3);
                outline: none;
            }

        .signup-form .text-danger {
            font-size: 0.9em;
            margin-top: 5px;
        }

        .signup-form .btn-signup {
            background-color: #e6b800;
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 20px;
            font-size: 1em;
            font-weight: 600;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            width: 100%;
            justify-content: center;
        }

            .signup-form .btn-signup:hover {
                background-color: #cc9900;
            }


        .signup-form .signup-input {
            padding: 10px;
            font-size: 0.9em;
        }

        .signup-form .btn-signup {
            padding: 10px 20px;
            font-size: 0.9em;
        }

    }
</style>