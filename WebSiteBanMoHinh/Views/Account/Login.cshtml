@using WebSiteBanMoHinh.Resources;
@inject LanguageService ShareLocallizer
@model LoginViewModel
@{
    ViewData["Title"] = "Register";
}

<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>@ShareLocallizer.GetLocalizedHTML("Login to your account")</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">
						<div class="form-group">
							<label>@ShareLocallizer.GetLocalizedHTML("Username")</label>
							<input asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>
						

						<div class="form-group">
							<label>@ShareLocallizer.GetLocalizedHTML("Password")</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>
						
						<button class="btn btn-default">@ShareLocallizer.GetLocalizedHTML("Login")</button>
						<a asp-action="LoginByGoogle" asp-controller="Account">@ShareLocallizer.GetLocalizedHTML("Login by Google")</a><br />
						<a asp-action="Create" asp-controller="Account">@ShareLocallizer.GetLocalizedHTML("Register")</a><br />
						<a asp-action="ForgetPass" asp-controller="Account">@ShareLocallizer.GetLocalizedHTML("Forget Password")</a>

					</form>
				</div><!--/login form-->
			</div>
			
			
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
 }