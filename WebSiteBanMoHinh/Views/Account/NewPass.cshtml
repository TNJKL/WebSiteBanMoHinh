@using WebSiteBanMoHinh.Resources;
@inject LanguageService ShareLocallizer
@model AppUserModel
@{
	ViewData["Title"] = "Change new password";
}

<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>@ShareLocallizer.GetLocalizedHTML("Change new password")</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="UpdateNewPassword" asp-controller="Account">
						<input type="hidden" name="token" value="@ViewBag.Token" />
						<div class="form-group">
							<label>@ShareLocallizer.GetLocalizedHTML("Email")</label>
							<input asp-for="Email" readonly value="@ViewBag.Email" class="form-control" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>


						<div class="form-group">
							<label>@ShareLocallizer.GetLocalizedHTML("Password")</label>
							<input asp-for="PasswordHash" class="form-control" />
							<span asp-validation-for="PasswordHash" class="text-danger" />
						</div>




						<button class="btn btn-default">@ShareLocallizer.GetLocalizedHTML("Send")</button>
						<a asp-action="Create" asp-controller="Account">@ShareLocallizer.GetLocalizedHTML("Register")</a><br />


					</form>
				</div><!--/login form-->
			</div>


		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
 }