@using WebSiteBanMoHinh.Resources;
@inject LanguageService ShareLocallizer
@model AppUserModel
@{
    ViewData["Title"] = "Change new password";
}

<section id="password-section">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <div class="login-form">
                    <!--login form-->
                    <h2>@ShareLocallizer.GetLocalizedHTML("Change new password")</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-action="UpdateNewPassword" asp-controller="Account">
                        <input type="hidden" name="token" value="@ViewBag.Token" />
                        <div class="form-group">
                            <label><i class="fa fa-envelope"></i> @ShareLocallizer.GetLocalizedHTML("Email")</label>
                            <input asp-for="Email" readonly value="@ViewBag.Email" class="form-control login-input" />
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label><i class="fa fa-lock"></i> @ShareLocallizer.GetLocalizedHTML("Password")</label>
                            <input asp-for="PasswordHash" class="form-control login-input" placeholder="Enter your new password" />
                            <span asp-validation-for="PasswordHash" class="text-danger" />
                        </div>

                        <button type="submit" class="btn btn-login"><i class="fa fa-paper-plane"></i> @ShareLocallizer.GetLocalizedHTML("Send")</button>
                    </form>

                    <div class="login-options">
                        <div class="login-links">
                            <a href="@Url.Action("Create", "Account")"><i class="fa fa-user-plus"></i> @ShareLocallizer.GetLocalizedHTML("Register")</a>
                            <a href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in-alt"></i> @ShareLocallizer.GetLocalizedHTML("Login")</a>
                        </div>
                    </div>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Style cho trang Change Password */
    #password-section {
        padding: 50px 0;
        background-color: #f5f5f5;
    }

    .login-form {
        background-color: white;
        border: 2px solid #e6b800;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

        .login-form h2 {
            font-size: 2em;
            font-weight: 700;
            font-family: 'Roboto', sans-serif;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 30px;
            text-transform: uppercase;
            border-bottom: 3px solid #e6b800;
            padding-bottom: 10px;
        }

        .login-form .form-group {
            margin-bottom: 20px;
        }

        .login-form label {
            font-size: 1.1em;
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .login-form .login-input {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1em;
            color: #333333;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .login-form .login-input:focus {
                border-color: #e6b800;
                box-shadow: 0 0 0 0.2rem rgba(230, 184, 0, 0.3);
                outline: none;
            }

        .login-form .text-danger {
            font-size: 0.9em;
            margin-top: 5px;
        }

        .login-form .btn-login {
            background-color: #e6b800;
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 20px;
            font-size: 1em;
            font-weight: 600;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            width: 100%;
            justify-content: center;
        }

            .login-form .btn-login:hover {
                background-color: #cc9900;
            }

    .login-options {
        margin-top: 20px;
        text-align: center;
    }

        .login-options .login-links {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

            .login-options .login-links a {
                color: #e6b800;
                font-size: 1em;
                font-weight: 600;
                text-decoration: none;
                display: flex;
                align-items: center;
                gap: 8px;
                transition: color 0.3s ease;
            }

                .login-options .login-links a:hover {
                    color: #cc9900;
                }
</style>