@using WebSiteBanMoHinh.Resources;
@inject LanguageService ShareLocallizer
@model AppUserModel
@{
	ViewData["Title"] = "Update Account Information";
}

<section id="">
	<!--form-->
	<div class="container">
		<div class="row">


			<div class="col-sm-8 col-sm-offset-1">
				<div class="signup-form">
					<!--sign up form-->
					<input type="hidden" asp-for="Id" />
					<h2>@ShareLocallizer.GetLocalizedHTML("Update Account Information")!</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form autocomplete="off" asp-action="UpdateInfoAccount" asp-controller="Account">

						<div class="form-group">
							<label>@ShareLocallizer.GetLocalizedHTML("Username")</label>
							<input asp-for="UserName" required readonly class="form-control" method="POST" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>

						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" readonly required class="form-control" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>

						<div class="form-group">
							<label>@ShareLocallizer.GetLocalizedHTML("Phone Number")</label>
							<input asp-for="PhoneNumber" class="form-control" />
							<span asp-validation-for="PhoneNumber" class="text-danger" />
						</div>
						<div class="form-group">
							<label>@ShareLocallizer.GetLocalizedHTML("Old Password")</label>
							<input type="text" readonly value="@Model.PasswordHash" class="form-control" />
						</div>
						<div class="form-group">
							<label>@ShareLocallizer.GetLocalizedHTML("New Password")</label>
							<input typr="text" name="PasswordHash"   class="form-control" />
							<span asp-validation-for="PasswordHash" class="text-danger" />
						</div>

						<button class="btn btn-default">@ShareLocallizer.GetLocalizedHTML("Update")</button>
					</form>
				</div><!--/sign up form-->
			</div>
		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
 }
