@model WebSiteBanMoHinh.Models.Paginate

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-pg="1"
                       asp-route-categoryId="@ViewBag.CategoryId"
                       asp-route-brandId="@ViewBag.BrandId">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-pg="@(Model.CurrentPage - 1)"
                       asp-route-categoryId="@ViewBag.CategoryId"
                       asp-route-brandId="@ViewBag.BrandId">Previous</a>
                </li>
            }

            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index"
                       asp-route-pg="@pge"
                       asp-route-categoryId="@ViewBag.CategoryId"
                       asp-route-brandId="@ViewBag.BrandId">@pge</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-pg="@(Model.CurrentPage + 1)"
                       asp-route-categoryId="@ViewBag.CategoryId"
                       asp-route-brandId="@ViewBag.BrandId">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-pg="@(Model.TotalPages)"
                       asp-route-categoryId="@ViewBag.CategoryId"
                       asp-route-brandId="@ViewBag.BrandId">Last</a>
                </li>
            }
        </ul>
    }
</div>