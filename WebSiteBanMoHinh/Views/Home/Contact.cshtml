@model ContactModel

<div class="contact-page">
    <!-- Hero section with background image -->
    <div class="contact-hero" style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/home/contact-bg.jpg') no-repeat center center; background-size: cover; padding: 60px 0; margin-bottom: 40px; color: white; text-align: center;">
        <div class="container">
            <h1>Contact Us</h1>
            <p>We'd love to hear from you</p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <!-- Company Information Section -->
            <div class="col-md-4">
                <div class="company-card">
                    <div class="card" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); padding: 25px; margin-bottom: 30px;">
                        <div class="companyinfo text-center">
                            <img src="~/media/logos/@Model.LogoImage" class="img-responsive center-block" alt="Company Logo" style="max-width: 200px; margin-bottom: 20px;">
                            <div class="company-details">
                                <div class="address" style="margin-top: 25px;">
                                    <h4 style="color: #FE980F; margin-bottom: 15px; font-weight: 600;">GET IN TOUCH</h4>
                                    <p><i class="fa fa-user" style="width: 25px; color: #FE980F;"></i> <b>@Model.Name</b></p>
                                    <p><i class="fa fa-envelope" style="width: 25px; color: #FE980F;"></i> @Model.Email</p>
                                    <p><i class="fa fa-phone" style="width: 25px; color: #FE980F;"></i> @Model.Phone</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Company Description -->
                    <div class="card" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); padding: 25px; margin-bottom: 30px;">
                        <h4 style="color: #FE980F; margin-bottom: 15px; font-weight: 600;">ABOUT US</h4>
                        <div style="line-height: 1.6;">
                            @Html.Raw(@Model.Description)
                        </div>
                    </div>

                    <!-- Social Media Links -->
                    <div class="card" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); padding: 25px; margin-bottom: 30px;">
                        <h4 style="color: #FE980F; margin-bottom: 15px; font-weight: 600;">FOLLOW US</h4>
                        <div class="social-icons text-center">
                            <a href="#" style="display: inline-block; margin: 0 10px; font-size: 24px; color: #FE980F;"><i class="fa fa-facebook"></i></a>
                            <a href="#" style="display: inline-block; margin: 0 10px; font-size: 24px; color: #FE980F;"><i class="fa fa-twitter"></i></a>
                            <a href="#" style="display: inline-block; margin: 0 10px; font-size: 24px; color: #FE980F;"><i class="fa fa-instagram"></i></a>
                            <a href="#" style="display: inline-block; margin: 0 10px; font-size: 24px; color: #FE980F;"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Map Section -->
            <div class="col-md-8">
                <div class="row">
                    <!-- Google Map -->
                    <div class="col-md-12">
                        <div class="card" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); margin-bottom: 30px; overflow: hidden;">
                            <h4 style="color: #FE980F; padding: 20px 25px 0; font-weight: 600;">OUR LOCATION</h4>
                            <div class="map-container" style="height: 350px; width: 100%;">
                                @Html.Raw(@Model.Map)
                            </div>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div class="col-md-6">
                        <div class="card" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); padding: 25px; margin-bottom: 30px;">
                            <h4 style="color: #FE980F; margin-bottom: 20px; font-weight: 600;">SEND A MESSAGE</h4>
                            <form>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Your Name" style="margin-bottom: 15px; border-radius: 5px; height: 45px;">
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Your Email" style="margin-bottom: 15px; border-radius: 5px; height: 45px;">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Subject" style="margin-bottom: 15px; border-radius: 5px; height: 45px;">
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" rows="4" placeholder="Your Message" style="margin-bottom: 15px; border-radius: 5px;"></textarea>
                                </div>
                                <button type="submit" class="btn btn-warning pull-right" style="background-color: #FE980F; border: none; padding: 10px 30px; border-radius: 5px;">Send Message</button>
                            </form>
                        </div>
                    </div>

                    <!-- Facebook Page Plugin -->
                    <div class="col-md-6">
                        <div class="card" style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); padding: 25px; margin-bottom: 30px;">
                            <h4 style="color: #FE980F; margin-bottom: 20px; font-weight: 600;">CONNECT WITH US</h4>
                            <div class="facebook-container" style="display: flex; justify-content: center;">
                                <div class="fb-page"
                                     data-href="https://www.facebook.com/aow.page"
                                     data-tabs="message"
                                     data-width="340"
                                     data-height="400"
                                     data-small-header="false"
                                     data-adapt-container-width="true"
                                     data-hide-cover="false"
                                     data-show-facepile="true">
                                    <blockquote cite="https://www.facebook.com/aow.page" class="fb-xfbml-parse-ignore">
                                        <a href="https://www.facebook.com/aow.page">AOW - Anime/Manga Fanpage</a>
                                    </blockquote>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional styles -->
<style>
    .contact-page .card {
        transition: all 0.3s ease;
    }

        .contact-page .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }

    .contact-page .form-control:focus {
        border-color: #FE980F;
        box-shadow: 0 0 0 0.2rem rgba(254, 152, 15, 0.25);
    }

    .contact-page .map-container iframe {
        width: 100%;
        height: 100%;
        border: 0;
    }

    .contact-hero h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .media (max-width: 768px) {
        .contact-hero

    {
        padding: 40px 0;
    }

    .contact-hero h1 {
        font-size: 2rem;
    }

    }
</style>

