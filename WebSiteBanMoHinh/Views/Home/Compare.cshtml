@using WebSiteBanMoHinh.Resources
@inject LanguageService ShareLocallizer
@{
    ViewData["title"] = "List Compare";
    var key = 0;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        .compare-container {
            padding: 40px 0;
            background-color: #f5f5f5;
            font-family: 'Roboto', sans-serif;
        }

        .compare-title {
            font-size: 2em;
            font-weight: 700;
            color: #e6b800;
            text-align: center;
            text-transform: uppercase;
            margin-bottom: 30px;
        }

        .compare-products {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            padding: 0 15px;
        }

        .compare-item {
            background-color: white;
            border: 2px solid #e6b800;
            border-radius: 10px;
            padding: 15px;
            width: 250px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .compare-item:hover {
                transform: translateY(-5px);
            }

        .remove-btn {
            display: block;
            text-align: right;
            margin-bottom: 10px;
        }

            .remove-btn a {
                color: #ff4d4d;
                font-size: 0.9em;
                font-weight: 600;
                text-decoration: none;
            }

                .remove-btn a:hover {
                    color: #e63939;
                }

        .compare-item img {
            max-width: 100%;
            max-height: 150px;
            object-fit: contain;
            margin: 10px 0;
            border-radius: 5px;
        }

        .compare-item .attribute {
            margin: 10px 0;
            font-size: 0.9em;
            color: #2c3e50;
        }

            .compare-item .attribute label {
                font-weight: 700;
                color: #e6b800;
                display: block;
                text-transform: uppercase;
                margin-bottom: 5px;
            }

        .compare-item .add-to-cart {
            background-color: #e6b800;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 20px;
            transition: all 0.3s ease;
            width: 100%;
            font-size: 0.9em;
            margin: 10px 0;
        }

            .compare-item .add-to-cart:hover {
                background-color: #cc9900;
            }

        .compare-item .availability {
            color: #789c6c;
            font-weight: 600;
            font-size: 0.9em;
        }

        @@media screen and (max-width: 767px) {
            .compare-item {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="compare-container">
        <h3 class="compare-title">@ShareLocallizer.GetLocalizedHTML("Compare Products")</h3>
        <div class="compare-products">
            @foreach (var compare_product in Model)
            {
                key++;
                <div class="compare-item">
                    <div class="remove-btn">
                        <a class="confirmDeletion" asp-action="DeleteCompare" asp-controller="Home" asp-route-Id="@compare_product.Compares.Id">
                            Remove <i class="fas fa-times"></i>
                        </a>
                    </div>
                    <img src="~/media/products/@compare_product.Product.Image" alt="@compare_product.Product.Name" />
                    <div class="attribute">
                        <label>Title</label>
                        <span>@compare_product.Product.Name</span>
                    </div>
                    <div class="attribute">
                        <label>Price</label>
                        <span>@compare_product.Product.Price.ToString("#,##0 VNĐ")</span>
                    </div>
                    <div class="attribute">
                        <button class="add-to-cart" data-product_id="@compare_product.Product.Id">
                            @ShareLocallizer.GetLocalizedHTML("Add to Cart")
                        </button>
                    </div>
                    <div class="attribute">
                        <label>Availability</label>
                        <span class="availability">In stock</span>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $('.add-to-cart').click(function (e) {
                e.preventDefault();
                var Id = $(this).data("product_id");

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Add", "Cart")",
                    data: { Id: Id },
                    success: function (result) {
                        if (result) {
                            Swal.fire({
                                title: "Thành công!",
                                text: "@ShareLocallizer.GetLocalizedHTML("Add Item to cart successfully")",
                                icon: "success",
                                confirmButtonText: "OK",
                                background: "#fff0f5",
                                color: "#2c3e50",
                                confirmButtonColor: "#e6b800",
                                customClass: {
                                    popup: 'anime-swal',
                                    title: 'anime-swal-title',
                                    content: 'anime-swal-text'
                                }
                            });
                        }
                    },
                    error: function () {
                        Swal.fire("Đã xảy ra lỗi khi thêm vào giỏ hàng!");
                    }
                });
            });
        });
    </script>
</body>
</html>