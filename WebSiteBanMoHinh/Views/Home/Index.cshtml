        }

        .series-item p {
            margin-top: 10px;
            font-size: 0.9em;
            font-weight: 600;
            color: #2c3e50;
            text-align: center;
            line-height: 1.2;
        }

    /* Customer Reviews Slider */
    .reviews-section {
        background-color: #f5f5f5;
        padding: 40px 0;
        text-align: center;
    }

        .reviews-section h2 {
            font-size: 2em;
            font-weight: 700;
            color: #e6b800; /* Đồng bộ với sidebar */
            margin-bottom: 30px;
            text-transform: uppercase;
            font-family: 'Roboto', sans-serif; /* Đồng bộ font */
        }

    .reviews-slider {
        position: relative;
        overflow: hidden;
        max-width: 1200px;
        margin: 0 auto;
    }

    .reviews-container {
        display: flex;
        transition: transform 0.5s ease;
        cursor: grab;
        user-select: none;
    }

        .reviews-container.dragging {
            cursor: grabbing;
            transition: none;
        }

    .review-item {
        flex: 0 0 33.33%;
        padding: 15px;
        box-sizing: border-box;
    }

    .review-card {
        background-color: white;
        border: 2px solid var(--secondary-color);
        border-radius: 10px;
        padding: 20px;
        text-align: left;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .review-card p {
            font-size: 1em;
            color: var(--text-color);
            margin-bottom: 15px;
            line-height: 1.5;
        }

        .review-card .rating {
            color: var(--primary-color);
            margin-bottom: 10px;
        }

        .review-card .reviewer {
            font-weight: 600;
            color: var(--text-color);
            font-size: 0.9em;
        }

    .reviews-slider .carousel-indicators {
        position: absolute;
        bottom: -30px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 10px;
    }

        .reviews-slider .carousel-indicators span {
            width: 10px;
            height: 10px;
            background-color: #ccc;
            border-radius: 50%;
            cursor: pointer;
        }

            .reviews-slider .carousel-indicators span.active {
                background-color: var(--primary-color);
            }

    .anime-swal {
        border: 2px solid #e6b800;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .anime-swal-title {
        font-family: 'Roboto', sans-serif;
        font-weight: 700;
        font-size: 1.5em;
    }

    .anime-swal-text {
        font-family: 'Roboto', sans-serif;
        font-size: 1.1em;
    }

    /* Responsive adjustments */
    @@media screen and (max-width: 991px) {
        .review-item {
            flex: 0 0 50%;
        }
    }

    @@media screen and (max-width: 767px) {
        .review-item {
            flex: 0 0 100%;
        }

        .reviews-section h2 {
            font-size: 1.5em;
        }

        .review-card p {
            font-size: 0.9em;
        }
    }
</style>

